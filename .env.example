# CloneBox VM Configuration
# Copy this file to .env and set your own values

# VM basic settings
VM_NAME=clonebox-vm
VM_RAM_MB=8192
VM_VCPUS=4
VM_DISK_SIZE_GB=20
VM_GUI=true
VM_BASE_IMAGE=

# VM session and networking
VM_USER_SESSION=false
VM_NETWORK_MODE=auto

# VM credentials
VM_USERNAME=ubuntu
VM_PASSWORD=ubuntu

# VM behavior
VM_AUTOSTART_APPS=true

# CloneBox system settings
CLONEBOX_SYSTEM_IMAGES_DIR=/var/lib/libvirt/images
CLONEBOX_USER_IMAGES_DIR=~/.local/share/libvirt/images
CLONEBOX_BASE_IMAGE_URL=https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img
CLONEBOX_BASE_IMAGE_FILENAME=clonebox-ubuntu-jammy-amd64.qcow2

# Note: paths, packages, snap_packages, services, post_commands, and web_services
# are configured through the CLI or project files, not environment variables
